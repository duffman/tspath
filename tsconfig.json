{
	"compilerOptions": {
		"target":                 "ES6",
		"module":                 "commonjs",
		"outDir":                 "./lib",
		"strict":                 false,
		"baseUrl":                "./src",
		"declaration":            true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata":  true
	},
	"tspath":          {
		"compactJs": true
	},
	"include":         [
		"./",
		"src/**/*"
	],
	"exclude":         [
		"hack",
		"hack.*",
		"node_modules",
		"lib"
	]
}
